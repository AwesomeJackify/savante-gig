      { top: "200px" },
      {
        top: "0",
        delay: 0.4,
        duration: 2,
        ease: "power2.out",
      }
    )
    .to(
      ".hero-text",
      {
        opacity: 1,
        duration: 2,
        stagger: 0.5,
      },
      "<1"
    )
    .to(
      "nav",
      {
        opacity: 1,
        duration: 1,
      },
      "<1"
    )
    .to(
      ".black-filter",
      {
        opacity: 0.5,
        duration: 1,
      },
      "<"
